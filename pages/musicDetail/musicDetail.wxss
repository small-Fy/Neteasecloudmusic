.introduce {
  margin-top: 120rpx;
  padding: 60rpx 30rpx 0 30rpx;
  position: relative;
  display: flex;
}

.introduce .backgroundImg {
  width: 100%;
  height: 400rpx;
  filter: blur(99px);
  position: absolute;
  z-index: -1;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.introduce .backgroundImg image {
  width: 100%;
  height: 100%;
}

.introduce .left {
  width: 360rpx;
  height: 300rpx;
  margin-right: 30rpx;
}

.introduce .left image {
  width: 100%;
  height: 100%;
}

.introduce .playCount {
  color: white;
  font-size: 24rpx;
  display: flex;
  position: absolute;
  top: 70rpx;
  left: 190rpx;
}

.introduce .playCount .img {
  width: 30rpx;
  height: 30rpx;
}

.introduce .playCount .img image {
  width: 100%;
  height: 100%;
}

.introduce .right {
  width: 498rpx;
}

.introduce .right .name {
  color: white;
  font-size: 36rpx;
}

.introduce .right .creator {
  display: flex;
  margin-top: 40rpx;
}

.introduce .right .creator .avatarUrl {
  width: 50rpx;
  height: 50rpx;
}

.introduce .right .creator .avatarUrl image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.introduce .right .creator .nickname {
  color: white;
  margin-left: 16rpx;
  font-size: 26rpx;
  line-height: 54rpx;
}

.introduce .right .creator .van-icon {
  line-height: 54rpx;
}

.introduce .right .description {
  color: #d8d5d5;
  width: 250rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  position: absolute;
  bottom: 0
}

.introduce .right .icon {
  position: absolute;
  bottom: 10rpx;
  right: 40rpx
}

