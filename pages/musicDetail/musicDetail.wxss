.navigationBar {
  display: flex;
  padding: 10rpx 20rpx;
  height: 80rpx;
  position: absolute;
  top: 34rpx;
}

.navigationBar .back {
  line-height: 80rpx;
  margin-top: 15rpx;
}

.navigationBar .msg {
  margin-left: 40rpx;
}

.navigationBar .msg .text {
