.inner {
  margin-top: 40rpx;
  height: 400rpx;
  background-color: white;
  border-radius: 50rpx 50rpx 0 0;
}

.inner .top {
  display: flex;
  justify-content: space-between;
  padding: 40rpx;
}

.inner .top .left {
  display: flex;
  align-items: center;
}

.inner .top .left .icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}

.inner .top .left .icon image {
  width: 100%;
  height: 100%;
}

.inner .top .left .play {
  display: flex;
  line-height: 54rpx;
}

.inner .top .left .play .bigSize {
  font-size: 34rpx;
}

.inner .top .left .play .smallSize {
  font-size: 28rpx;
  color: #666;
}

.inner .top .right {
  display: flex;
  width: 240rpx;
  background-color: #c20c0c;
  border-radius: 40rpx;
  text-align: center;
  color: white;
  padding: 20rpx;
}

.inner .top .right .icon {
  margin-top: 5rpx;
  margin-left: 20rpx;
}


.inner .playList .item {
  padding: 20rpx 40rpx 20rpx 20rpx;
}

.inner .playList .item .conditions{
  display: flex;
  justify-content: space-between;
}


.inner .playList .item .left{
  display: flex;
  align-items: center
}

.inner .playList .item .left .index{
  color: #666;
  line-height: 84rpx;
  width: 84rpx;
  text-align: center
}

.inner .playList .item .left .icon{
  width: 40rpx;
  height: 40rpx;
  margin: 0 22rpx
}

.inner .playList .item .left .icon image{
  width: 100%;
  height: 100%
}

