.discMsg .top {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 30rpx;
}

.discMsg .top .left {
  display: flex;
}

.discMsg .top .left .cycle-icon {
  width: 50rpx;
  height: 50rpx;
}

.discMsg .top .left .cycle-text {
  margin-left: 16rpx;
}

.discMsg .top .left .cycle-icon image {
  width: 100%;
  height: 100%;
}

.discMsg .top .right {
  display: flex;
}

.discMsg .top .right .text {
  margin: 0 40rpx 0 16rpx;
  line-height: 54rpx;
}

.discMsg .top .right .collection {
  width: 50rpx;
  height: 50rpx;
}

.discMsg .top .right .collection image {
  width: 100%;
  height: 100%;
}

.discMsg .top .right .empty {
  width: 50rpx;
  height: 50rpx;
}

.discMsg .top .right .empty image {
  width: 100%;
  height: 100%;
}

.discMsg .inner {
  border-top: 2rpx solid #666
}

.discMsg .inner .item {
  margin: 20rpx;
  padding: 20rpx 10rpx;
  display: flex;
  justify-content: space-between
}

.discMsg .inner .item .left{
  display: flex;
  color: black
}

.discMsg .inner .item .font{
  color: #c20c0c !important
}

.discMsg .inner .item .left .icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  margin-top: 5rpx
}

.discMsg .inner .item .left .icon image{
  width: 100%;
  height: 100%
}

.discMsg .inner .item .left .bigSize{
  font-size: 32rpx;
  width: 250rpx;
  overflow:hidden;
  white-space: nowrap; 
  text-overflow: ellipsis;
}

.discMsg .inner .item .left .smallSize{
  font-size: 32rpx;
  color: #666;
  line-height: 50rpx;
  width: 200rpx;
  overflow:hidden;
  white-space: nowrap; 
  text-overflow: ellipsis;
}

.discMsg .inner .item .right{
  display: flex
}

.discMsg .inner .item .right .tag{
  margin-right: 50rpx;
  width: 100rpx
}

.discMsg .inner .item .right .icon{
  width: 40rpx;
  height: 40rpx
}

.discMsg .inner .item .right .icon image{
  width: 100%;
  height: 100%
}
