.data_none{
  text-align: center;
  font-size: 60rpx;
  font-style: italic;
  margin-top: 60rpx
}

.inner{
  padding: 0 20rpx
}

.item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.item .left {
  margin-right: 20rpx;
  position: relative;
}

.item .left .coverUrl {
  width: 300rpx;
  height: 150rpx;
}

.item .left .coverUrl image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.left .playCount {
  color: white;
  font-size: 24rpx;
  display: flex;
  position: absolute;
  top: 10rpx;
  right: 16rpx;
}

.item .left .playCount .img {
  width: 30rpx;
  height: 30rpx;
}

.item .left .playCount .img image {
  width: 100%;
  height: 100%;
}

.item .right {
  padding: 10rpx 0;
}

.item .right .msg {
  font-size: 32rpx;
  width: 270rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item .right .bottom {
  display: flex;
  margin-top: 10rpx;
}

.item .right .bottom .durationms {
  color: #666;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.item .right .bottom .userName {
  color: #666;
  font-size: 28rpx;
  width: 270rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}