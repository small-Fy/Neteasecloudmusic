<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}" indicator-color="#f2f2f2" indicator-active-color="#C20C0C" class="banner">
  <block wx:for="{{banners}}" wx:key="{{index}}">
    <swiper-item>
      <image src="{{item.pic}}" class="slide-image" mode="widthFix" />
    </swiper-item>
  </block>
</swiper>