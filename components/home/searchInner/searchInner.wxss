.searchInner {
  padding: 20rpx 30rpx;
  height: 1000rpx;
}

.searchInner .top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.searchInner .top .left {
  display: flex;
}

.searchInner .top .left .search {
  width: 500rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #666;
}

.searchInner .top .left .icon-left {
  width: 50rpx;
  height: 50rpx;
  margin-right: 40rpx;
}

.searchInner .top .left .icon-left image {
  width: 100%;
  height: 100%;
}

.searchInner .top .icon-right {
  width: 50rpx;
  height: 50rpx;
}

.searchInner .top .icon-right image {
  width: 100%;
  height: 100%;
}

.searchInner .banner {
  width: 90%;
  height: 150rpx;
  margin: 0 auto;
}

.searchInner .banner image {
  width: 100%;
  height: 100%;
}

.searchInner .searchHistory{
  margin-top: 50rpx
}

.searchInner .searchHistory .head{
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx
}

.searchInner .searchHistory .head .text{
  font-weight: 700;
  font-size: 32rpx
}

.searchInner .searchHistory .head .text{
  font-weight: 700;
  font-size: 32rpx
}

.searchInner .searchHistory .historyList{
  width: 100%;
  white-space: nowrap;
}

.searchInner .searchHistory .historyList .historyItem{
  display: inline-block;
  padding: 6rpx 10rpx;
  background-color: #999;
  font-size: 30rpx;
  border-radius: 18rpx;
  margin-right: 20rpx
}

.searchInner .title {
  font-weight: 700;
  margin-top: 40rpx;
}

.searchInner .hotSearch {
  padding-top: 20rpx;
}

.searchInner .hotSearch .searchItem {
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
}

.searchInner .hotSearch .searchItem .left {
  display: flex;
}

.searchInner .hotSearch .searchItem .left .index {
  line-height: 100rpx;
  width: 50rpx;
  text-align: center;
}

.searchInner .hotSearch .searchItem .left .font {
  color: #c20c0c;
  font-weight: 700;
}

.searchInner .hotSearch .searchItem .left .msg {
  margin-left: 20rpx;
}

.searchInner .hotSearch .searchItem .left .msg .up {
  display: flex;
}

.searchInner .hotSearch .searchItem .left .msg .up .hot {
  font-style: italic;
  color: #c20c0c;
  font-weight: 700;
  font-size: 30rpx;
  line-height: 50rpx;
}

.searchInner .hotSearch .searchItem .left .msg .up .new {
  font-style: italic;
  color: #c20c0c;
  font-weight: 700;
  font-size: 30rpx;
  line-height: 50rpx;
}

.searchInner .hotSearch .searchItem .left .msg .up .up_red {
  width: 40rpx;
  height: 40rpx;
}

.searchInner .hotSearch .searchItem .left .msg .up .up_red image {
  width: 100%;
  height: 100%;
}

.searchInner .hotSearch .searchItem .left .msg .up .searchWord {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.searchInner .hotSearch .searchItem .left .msg .up .fontup {
  font-weight: 700;
}

.searchInner .hotSearch .searchItem .left .msg .bottom {
  font-size: 28rpx;
  color: #666;
  width: 400rpx;
  padding-top: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.searchInner .hotSearch .searchItem .right {
  font-size: 28rpx;
  color: #666;
}

.textTop{
  color: cornflowerblue;
  margin: 20rpx 0 30rpx 40rpx
}

.item{
  border-top: 2rpx solid #aaa
}