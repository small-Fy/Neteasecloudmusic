.bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fafafa;
  border-top: 2rpx solid #999;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}

.bottom .left {
  display: flex;
}

.bottom .left .poster {
  width: 70rpx;
  height: 70rpx;
  margin-top: 4rpx;
}

.bottom .left .poster image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.bottom .left .music {
  margin-left: 10rpx;
}

.bottom .left .music .name {
  font-size: 34rpx;
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bottom .left .music .author {
  font-size: 28rpx;
  color: #666;
}

.bottom .right {
  display: flex;
  align-items: center;
}

.bottom .right .play {
  width: 50rpx;
  height: 50rpx;
}

.bottom .right .play image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.bottom .right .pause {
  width: 50rpx;
  height: 50rpx;
}

.bottom .right .pause image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.bottom .right .menu {
  width: 50rpx;
  height: 50rpx;
  margin: 0 30rpx 0 30rpx;
}

.bottom .right .menu image {
  width: 100%;
  height: 100%;
}
